.subscriptions
  &__inner
    max-width 430px
  &__title
    font-size 18px
    font-weight bold
    line-height 1.33
    color rgba(0, 0, 0, .7)
    margin-bottom 18px
  &__fields
    margin-bottom 45px
  &__row
    display flex
    margin-bottom 30px
    width 100%
    &:last-child
      margin-bottom 0
  &__fieldset
    width 225px
    margin-right 58px
    &:last-child
      margin-right 0
    &-title
      font-size 12px
      color rgba(0, 0, 0, .3)
      margin-bottom 12px
    &-items
      display flex
      flex-direction column
      margin-bottom -10px
      &._inline
        flex-direction row
        flex-wrap wrap
    &-item
      margin-bottom 14px
      &:last-child
        margin-bottom 0
  &__buttons
    display flex
    justify-content space-between
  &__button
    width 100%
    margin-right 20px
    &:last-child
      margin-right 0
