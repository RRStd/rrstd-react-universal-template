.article
  &__date
    font-size 12px
    color rgba(0,0,0,.3)
    &._notify
      color #e15776
  &__title
    margin-top 17px
    font-size 18px
    line-height 1.33
    color rgba(0, 0, 0, .8)
    text-transform uppercase
  &__image
    max-width 100%
    border-radius 4px
    &-wrapper
      max-width 100%
      margin-top 23px
      width 368px
      overflow hidden
      position relative
      &:after
        content ''
        display block
        width 100%
        height 100%
        background rgba(255,255,255,.3)
        position absolute
        top 0
        left 0
        z-index 2
  &__text
    margin-top 20px
    font-size 14px
    line-height 20px
    color rgba(0, 0, 0, .7)
  &__geoposition
    border-top 1px solid rgba(0, 0, 0, .05)
    margin-top 18px
    padding 18px 0 0
  &__like
    margin-top 18px
    padding-top 18px
    border-top 1px solid rgba(0, 0, 0, .05)
    font-size 14px
    color rgba(0, 0, 0, 0.7)
    &-title
      font-size 14px
      display flex
      align-items center
    &-icon
      margin-right 18px
    &-buttons
      margin-top 18px
      .button
        display inline-block
        width 130px
        margin-right 20px