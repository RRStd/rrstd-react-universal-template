.tag
  display inline-block
  &__control
    display none
  &__label
    display inline-block
    font-size 14px
    color rgba(0, 0, 0, .3)
    padding 4px 10px
    background-color rgba(0, 0, 0, 0.05)
    border-radius 4px
    cursor pointer
    transition all .2s
  &__label:hover
    color rgba(0, 0, 0, 0.8)
    background-color rgba(0, 0, 0, 0.1)
  &__control:checked + &__label
    color #fff
    background-color #e15776
