.tabs
  &__item
    font-size 14px
    display inline-block
    cursor pointer
    color rgba(0, 0, 0, .3)
    text-transform uppercase
    padding-bottom 9px
    transition border-bottom .2s
    margin-right 20px
    &:last-child
      margin-right 0
    &:hover
      border-bottom 3px solid rgba(0, 0, 0, 0.2)
    &._active
      color #09ce95
      border-bottom 3px solid #09ce95
