.upload-img
  &__inner
    display flex
    align-items center
  &__img
    width 80px
    height 80px
    border-radius 50%
    margin-right 20px
    background-size cover
    background-position center
    border-radius 4px
    background-color rgba(0,0,0,.05)
    background-position center
    background-size cover
    background-repeat no-repeat
    position relative
    &:after
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background-color rgba(242, 242, 242, 0.3)
    &._empty
      background-size auto
      &:after
        display none
  &__icon
    width 24px
    height 24px
    // background-image url('~assets/imgs/download.svg')
    background-repeat no-repeat
    background-position center
    margin-right 10px
    transition all .3s ease
  &__text
    font-size 14px
    color rgba(0, 0, 0, .3)
  &__input
    display flex
    align-items center
    position relative
    cursor pointer
    &-field
      position absolute
      width 100%
      height 100%
      z-index 2
      opacity 0
      cursor pointer
    &:hover ^[0]
      // &__icon
      //   background-image url('~assets/imgs/download-hover.svg')
      &__text
        color #09ce95