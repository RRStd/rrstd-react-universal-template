.radio
  &__label
    font-size 14px
    color rgba(0, 0, 0, 0.7)
    cursor pointer
    display block
    margin-bottom 10px
    &:last-child
      margin-bottom 0
  &__control:not(checked)
    position absolute
    opacity 0
  &__control:not(checked) + &__label
    position relative
    padding 0 0 0 22px
  &__control:not(checked) + &__label:before
    content ''
    position absolute
    top 1px
    left 0
    width 12px
    height 12px
    border 1px solid rgba(0, 0, 0, .2)
    border-radius 50%
    background-color #fff
  &__control:not(checked) + &__label:after
    content ''
    position absolute
    top 5px
    left 4px
    width 6px
    height 6px
    border-radius 50%
    background-color #dcdcdc
    opacity 0
    transition all .2s
  &__control:hover + &__label:after
    opacity 1
  &__control:checked + &__label:after
    background-color #09ce95
    opacity 1