.news-list__item
  display flex
  margin-bottom 10px
  &:last-child
    margin-bottom 0
  &:last-child &
    &-content
      border-bottom none
  &._main
    margin-bottom 40px
  &._main &
    &-image
      min-width 287px
      height 200px
      &-wrapper
        height 200px
        &:before
          top 30px
    &-content
      border-bottom none
    &-title
      font-size 18px
      text-transform uppercase
      font-weight 700
      color rgba(0, 0, 0, 0.8)
      line-height 24px
      margin 17px 0
    &-description
      display block
      font-size 14px
      line-height 20px
      color rgba(0, 0, 0, 0.7)
      overflow hidden
      height 65px
      text-overflow ellipsis
  &._notify &
    &-date
      color #e15776
  &._read &
    &-image-wrapper
      &:before
        display none
  &-image
    min-width 60px
    background no-repeat center
    background-size cover
    height 60px
    border-radius 4px
    flex 0 1
    &-wrapper
      position relative
      height 60px
      &:before
        content ''
        width 7px
        height 7px
        position absolute
        top 50%
        margin-top -7px
        left -7px
        background-color #09ce95
        border-radius 50%
        border solid 3px #fff
        z-index 2
      &:after
        content ''
        width 100%
        height 100%
        position absolute
        top 0
        left 0
        background-color #f2f2f2
        opacity .3
        border-radius 4px
  &-content
    margin-left 10px
    padding-bottom 10px
    height 70px
    box-sizing border-box
    border-bottom 1px solid rgba(0, 0, 0, .05)
    width 100%
    flex 1 0
  &-date
    color rgba(0, 0, 0, 0.3)
    font-size 12px
  &-title
    line-height 20px
    font-size 14px
    margin-top 3px
    color rgba(0, 0, 0, 0.7)
    font-weight 400
  &-description
    display none