.page-toolbar
  display flex
  align-items center
  &__item
    margin-right 20px
    &:last-child
      margin-right 0
  &__add
    font-size 14px
    line-height 1.43
    text-align left
    color rgba(0,0,0,.3)
    display flex
    align-items center
    transition all .3s ease
    &:hover
      color #09ce95
      // &:before
      //   background-image url('~assets/imgs/add-hover.svg')
    &:before
      content ''
      min-width 24px
      min-height 24px
      // background url('~assets/imgs/add.svg') center no-repeat
      margin-right 10px
      transition all .3s ease