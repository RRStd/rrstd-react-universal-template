.menu
  &__items
    border-bottom 1px solid rgba(0, 0, 0, .05)
    padding-bottom 30px
    margin-bottom 30px
    &:last-child
      border none
      padding 0
      margin 0
  &__item
    margin-bottom 20px
    &:last-child
      margin-bottom 0
    &._info
      position relative
      &:before
        content ''
        width 6px
        height 6px
        background-color #09ce95
        border-radius 50%
        position absolute
        top 7px
        left -22px
  &__link
    font 400 14px/20px 'Helvetica', 'Open Sans', sans-serif
    text-transform uppercase
    color rgba(0, 0, 0, .5)
    &:hover
      color #000
    &._active
      font-weight 700
      color #000
