.layout
  min-width 1000px
  &__inner
    display flex
    justify-content center
    min-height 100vh
  &__col
    box-sizing border-box
    &:first-child
      width calc(205px + ((100vw - 715px - 205px) / 2))
      min-width 245px
      // background #f6f5f6 url('~assets/imgs/layout-col-bg.jpg') top right no-repeat
      background #f6f5f6 top right no-repeat
      background-size auto 100%
      padding-right 20px
      display flex
      justify-content flex-end
      position fixed
      top 0
      left 0
      height 100vh
    &:first-child &
      &-inner
        width 185px
    &:last-child
      margin-left calc(205px + ((100% - 715px - 205px) / 2))
      width calc(715px + ((100% - 715px - 205px) / 2))
      padding-left 40px
    &:last-child &
      &-inner
        width 675px
  &__content
    padding-bottom 20px
  &__logo
    margin-top 30px
    width 141px
    height 60px
  &__menu
    margin-top 70px
